---
// Componentes
import Card from "./Card/index.astro";

// i18n
import { getI18N } from "../locales";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Card
  colSpan="md:col-span-3"
  rowSpan="md:row-span-2"
  className="animate-fade-down animate-once animate-normal px-0"
>
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between md:max-h-[300px] gap-4">
      <div class="flex flex-col h-full">
        <h3 class="text-sm font-light m-0 text-gray-500">
          {i18n.INTRO.WELCOME}
        </h3>
        <div class="flex items-center gap-3">
          <p class="m-0 font-light text-xl">
            {i18n.INTRO.GREETING}
          </p>
          <h1>
            <b
              class="bg-gradient-to-r from-indigo-500 via-fuchsia-700 to-violet-400 inline-block text-transparent bg-clip-text font-bold text-4xl"
            >
              {i18n.INTRO.NAME}</b
            >
          </h1>
        </div>
        <p>
          {i18n.INTRO.DESCRIPTION}
        </p>
      </div>
    </div>
  </div>
</Card>
