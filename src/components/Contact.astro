---
// Componentes
import Card from "./Card/index.astro";

// i18n
import { getI18N } from "../locales";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Card
  colSpan="md:col-span-1"
  rowSpan="md:row-span-2"
  className="bg-gradient-to-r from-violet-500 to-rose-500 text-white"
>
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-xl font-bold text-pretty">
        {i18n.CONTACT.TITLE}
      </h1>
    </header>
    <div class="flex flex-col mt-4 gap-5">
      <div class="flex flex-col">
        <h2>{i18n.CONTACT.DETAILS_TITLE}</h2>
        <a href="mailto:ignaciofigueroadev@gmail.com" class="text-xs underline"
          >{i18n.CONTACT.EMAIL}</a
        >
      </div>
      <p>{i18n.CONTACT.COUNTRY}</p>
    </div>
  </div>
</Card>
