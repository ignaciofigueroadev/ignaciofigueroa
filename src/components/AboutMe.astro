---
// Componentes
import Card from "./Card/index.astro";

// i18n
import { getI18N } from "../locales";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Card
  colSpan="md:col-span-1"
  rowSpan="md:row-span-3"
  title={i18n.ABOUT_ME.TITLE}
  className="bg-gradient-to-r from-cyan-700 to-purple-500 text-white text-2xl rounded-lg"
>
  <div class="flex flex-col gap-2">
    <p class="text-xs font-bold">{i18n.ABOUT_ME.SUBTITLE}</p>
    <p class="text-xs font-light">{i18n.ABOUT_ME.PREFERENCES}</p>
    <ul class="list-disc list-inside text-xs">
      <li>TypeScript</li>
      <li>CSS - (Vanilla & Modules)</li>
      <li>Tailwind</li>
      <li>Material UI</li>
      <li>Shadcn/ui</li>
      <li>React</li>
      <li>Next.js</li>
      <li>Astro</li>
      <li>Node.js</li>
      <li>Supabase</li>
    </ul>
  </div>
</Card>
