---
// Components
import ProjectsCard from "../components/ProjectsCard.astro";
import { ToggleTheme } from "../components/ToggleTheme";

// i18n
import { getI18N } from "../locales";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const projects = [
  {
    IMAGE: "images/mydevnotes.webp",
    ALT: "Project - My Dev Notes",
    TITLE: i18n.MY_PROJECTS.PROJECTS[0].TITLE,
    DESCRIPTION: i18n.MY_PROJECTS.PROJECTS[0].DESCRIPTION,
    GITHUB_LINK: i18n.MY_PROJECTS.PROJECTS[0].GITHUB_LINK,
    LIVE_URL: i18n.MY_PROJECTS.PROJECTS[0].LIVE_URL,
    TECH_STACK: ["Next.js, Shadcn/ui, Tailwind, SWR, Sanity"],
  },
  {
    IMAGE: "images/mydevnotes.webp",
    ALT: "Project - My Dev Notes",
    TITLE: i18n.MY_PROJECTS.PROJECTS[0].TITLE,
    DESCRIPTION: i18n.MY_PROJECTS.PROJECTS[0].DESCRIPTION,
    GITHUB_LINK: i18n.MY_PROJECTS.PROJECTS[0].GITHUB_LINK,
    LIVE_URL: i18n.MY_PROJECTS.PROJECTS[0].LIVE_URL,
    TECH_STACK: ["Next.js, Shadcn/ui, Tailwind, SWR, Sanity"],
  },
  {
    IMAGE: "images/mydevnotes.webp",
    ALT: "Project - My Dev Notes",
    TITLE: i18n.MY_PROJECTS.PROJECTS[0].TITLE,
    DESCRIPTION: i18n.MY_PROJECTS.PROJECTS[0].DESCRIPTION,
    GITHUB_LINK: i18n.MY_PROJECTS.PROJECTS[0].GITHUB_LINK,
    LIVE_URL: i18n.MY_PROJECTS.PROJECTS[0].LIVE_URL,
    TECH_STACK: ["Next.js, Shadcn/ui, Tailwind, SWR, Sanity"],
  },
  {
    IMAGE: "images/mydevnotes.webp",
    ALT: "Project - My Dev Notes",
    TITLE: i18n.MY_PROJECTS.PROJECTS[0].TITLE,
    DESCRIPTION: i18n.MY_PROJECTS.PROJECTS[0].DESCRIPTION,
    GITHUB_LINK: i18n.MY_PROJECTS.PROJECTS[0].GITHUB_LINK,
    LIVE_URL: i18n.MY_PROJECTS.PROJECTS[0].LIVE_URL,
    TECH_STACK: ["Next.js, Shadcn/ui, Tailwind, SWR, Sanity"],
  },
];
---

<section class="px-4 py-8">
  <div class="flex grid-cols-3 justify-between items-center">
    <a
      href={i18n.MY_PROJECTS.GO_BACK}
      class="py-2 px-5 rounded-full bg-gradient-to-r from-violet-600 to-indigo-600 duration-200 flex items-center gap-2 hover:-translate-y-1"
    >
      <img src="/icons/arrow-back.svg" alt="Back Arrow Icon" />
      <p class="text-white">
        {i18n.MY_PROJECTS.GO_BACK_TITLE}
      </p>
    </a>
    <ToggleTheme client:only className="rounded-full w-12 h-12 p-2" />
  </div>
  <div class="py-10">
    <h2>{i18n.MY_PROJECTS.TITLE}</h2>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-3 w-full gap-2">
    {
      projects.map((project, i) => (
        <div class={`${i === 0 || i === 3 ? "lg:col-span-2" : ""} `}>
          <ProjectsCard
            image={project.IMAGE}
            alt={project.ALT}
            title={project.TITLE}
            description={project.DESCRIPTION}
            githubLink={project.GITHUB_LINK}
            liveLink={project.LIVE_URL}
            techStack={project.TECH_STACK}
          />
        </div>
      ))
    }
  </div>
</section>

