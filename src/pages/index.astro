---
// Components
import AboutMe from "../components/AboutMe.astro";
import Card from "../components/Card/index.astro";
import ChangeLanguage from "../components/ChangeLanguage.astro";
import Contact from "../components/Contact.astro";
import Intro from "../components/Intro.astro";
import Now from "../components/Now.astro";
import Projects from "../components/Projects.astro";
import { ToggleTheme } from "../components/ToggleTheme";

// Layout
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Ignacio Figueroa - Software Developer"
  description="Hey there! I'm Ignacio Figueroa, Software Developer. Check out my skills and cool web projects and come to know me!, Catch you in the digital realm!"
>
  <main>
    <div
      class="m-auto p-2 grid gap-2 overflow-hidden relative w-full sm:p-4 sm:gap-6 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-cols-4 lg:gap-4"
    >
      <Intro />
      <AboutMe />
      <Contact />
      <Projects />
      <ChangeLanguage />
      <div class="grid gap-3">
        <Card
          href="https://www.linkedin.com/in/ignacio-figueroa-0a1ba0263/"
          colSpan="md:col-span-1"
          rowSpan="md:row-span-1"
          className="bg-gradient-to-r from-cyan-500 to-blue-500 hover:scale-105 duration-150  animate-fade animate-duration-[1500ms] animate-normal"
          target="_blank"
        >
          <div class="flex flex-col justify-center items-center gap-3 h-full">
            <img src="/icons/linkedin.svg" alt="Linkedin" class="w-16 h-16" />
            <h3 class="font-bold text-white text-xs">LinkedIn</h3>
          </div>
        </Card>
        <Card
          href="https://github.com/ignaciofigueroadev"
          colSpan="md:col-spa"
          rowSpan="md:row-span-1"
          className="bg-gradient-to-r from-slate-900 to-slate-700 flex justify-center items-center hover:scale-105 duration-150 animate-fade animate-duration-[1500ms] animate-normal"
          target="_blank"
        >
          <div class="flex flex-col justify-center items-center gap-3 h-full">
            <img src="/icons/github.svg" alt="Github" class="w-16 h-16" />
            <h3 class="font-bold text-white text-xs">Github</h3>
          </div>
        </Card>
      </div>
      <div class="grid">
        <ToggleTheme
          client:only
          transition:persist
          className="rounded-lg py-8 lg:py-12"
        />
        <Now />
      </div>
    </div>
  </main>
</Layout>
